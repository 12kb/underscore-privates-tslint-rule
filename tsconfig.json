{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "lib",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "./src"
    ]
}